#home
    div
        height: 550px
        background: rgb(29, 29, 29)
        display: grid
        justify-content: center;
        align-items: center;
        text-align: center

        img
            width: 300px
            margin-top: 100px
            border-radius: 50%
            display: block
            border: solid 5px rgb(222, 222, 222)
            animation: slide-in-from-left 3s ease-out forwards

            @keyframes slide-in-from-left
                0%
                    width: 300px
                20%
                    width: 300px
                30%
                    width 325px
                60%
                    width: 325px
                80%
                    width: 300px

        h1
            font-family: 'Roboto', sans-serif
            display: inline-flex
            justify-content: flex-start // Align text to the start
            margin: 0px 0px 0px 30px
            white-space: nowrap
            overflow: hidden
            color: rgb(222, 222, 222)
            border-right: 3px solid rgb(222, 222, 222)
            padding-right: 8px
            animation: typing 2s steps(20, end) forwards, blink-caret 1s step-end infinite 2s
            text-align: centers

            @keyframes typing {
                from { max-width: 0 }
                to { max-width: 245px }
            }

            @keyframes blink-caret {
                from, to { border-color: transparent; }
                50% { border-color: rgb(222, 222, 222); }
            }

            @keyframes move-up
                to
                    transform: translateY(-100vh)

            @keyframes move-to-top
                to
                    transform: translateY(-400px)  

            @keyframes retype
                from
                    max-width: 0
                to
                    max-width: 90px 

            @keyframes retype-contact
                from
                    max-width: 0
                to
                    max-width: 120px 
            
            @keyframes retype-project
                from
                    max-width: 0
                to
                    max-width: 125px 

        p
            display: none
            font-family: 'Roboto', sans-serif
            justify-content: flex-start // Align text to the start
            margin: 0px 0px 0px 30px
            margin-top: -300px
            color: rgb(222, 222, 222)
            width: 390px
            font-size: 20px
            line-height: 30px
            opacity: 0

            @keyframes fade-in
                0%
                    opacity: 0
                50%
                    opacity: 0
                100%
                    opacity: 1
        
        #project-switch
            display: none
            font-family: 'Roboto', sans-serif
            margin-top: -780px

            span 
                margin: 0 5px 0 5px
                color: rgb(168, 168, 168)

                &:hover
                    color: rgb(222, 222, 222)
                    cursor: pointer
            
            #one
                color: rgb(222, 222, 222)


        
